# Production Environment Configuration
# Copy this file to .env.production and update with actual values

# Node Environment
NODE_ENV=production

# Database Configuration
DATABASE_URL=postgresql://tradingviewer:changeme@postgres:5432/tradingviewer
DB_USER=tradingviewer
DB_PASSWORD=changeme
DB_NAME=tradingviewer
DB_HOST=postgres
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# Server Configuration
SERVER_PORT=8000
CLIENT_PORT=80

# Market Data Configuration
# In production, set USE_MOCK_DATA=false to use real Yahoo Finance data
USE_MOCK_DATA=false

# Security - CRITICAL: Generate unique values for production!
# Use: openssl rand -base64 64 to generate secure secrets
JWT_SECRET=REPLACE_WITH_64_CHAR_RANDOM_STRING_GENERATED_WITH_openssl_rand_base64_64
JWT_REFRESH_SECRET=REPLACE_WITH_DIFFERENT_64_CHAR_RANDOM_STRING_FOR_REFRESH_TOKENS
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Password Security
BCRYPT_SALT_ROUNDS=14

# Session Security  
SESSION_SECRET=REPLACE_WITH_64_CHAR_RANDOM_STRING_FOR_SESSIONS

# CSRF Protection
CSRF_SECRET=REPLACE_WITH_32_CHAR_RANDOM_STRING_FOR_CSRF

# Encryption Keys (for sensitive data at rest)
ENCRYPTION_KEY=REPLACE_WITH_32_BYTE_HEX_ENCRYPTION_KEY

# Rate Limiting Configuration (Production - Financial Application)
ENABLE_RATE_LIMITING=true

# General API rate limits (15 minutes window) - balanced for production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500

# Authentication rate limits (very strict - 15 minutes window)
RATE_LIMIT_AUTH_MAX_ATTEMPTS=3
RATE_LIMIT_AUTH_LOCKOUT_DURATION=1800000

# Market data rate limits (1 minute window) - allows for active trading
RATE_LIMIT_MARKET_DATA_MAX=30

# Sensitive operations rate limits (1 hour window) - very conservative
RATE_LIMIT_SENSITIVE_MAX=5

# Security Headers
HSTS_MAX_AGE=31536000
CSP_REPORT_URI=https://yourdomain.com/csp-report

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_key_here

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password

# Backup Configuration
BACKUP_BEFORE_MIGRATION=true
VALIDATE_AFTER_MIGRATION=true

# Notification Webhooks (optional)
SLACK_WEBHOOK_URL=your_slack_webhook_url

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# Performance
MAX_POOL_SIZE=20
WEB_CONCURRENCY=4

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_CACHE=true
ENABLE_RATE_LIMITING=true
ENABLE_COMPRESSION=true
ENABLE_HELMET=true