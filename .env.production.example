# Production Environment Configuration
# Copy this file to .env.production and update with actual values

# Node Environment
NODE_ENV=production

# Database Configuration
DATABASE_URL=postgresql://tradingviewer:changeme@postgres:5432/tradingviewer
DB_USER=tradingviewer
DB_PASSWORD=changeme
DB_NAME=tradingviewer
DB_HOST=postgres
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# Server Configuration
SERVER_PORT=8000
CLIENT_PORT=80

# API Keys
FINNHUB_API_KEY=your_finnhub_api_key_here

# Security
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_key_here

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password

# Backup Configuration
BACKUP_BEFORE_MIGRATION=true
VALIDATE_AFTER_MIGRATION=true

# Notification Webhooks (optional)
SLACK_WEBHOOK_URL=your_slack_webhook_url

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# Performance
MAX_POOL_SIZE=20
WEB_CONCURRENCY=4

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_CACHE=true
ENABLE_RATE_LIMITING=true
ENABLE_COMPRESSION=true
ENABLE_HELMET=true