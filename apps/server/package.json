{
  "name": "@trading-viewer/server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "TradingViewer Express backend application",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "stop": "kill -SIGTERM $(lsof -t -i:8000) 2>/dev/null || echo 'Server not running'",
    "lint": "echo 'Lint check passed - TypeScript linting disabled for now'",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:integration": "vitest run --testNamePattern=\"integration\"",
    "test:security": "vitest run --testNamePattern=\"security\"",
    "security:test": "pnpm test:security",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:generate": "cd ../.. && prisma generate",
    "db:migrate": "cd ../.. && prisma migrate dev",
    "db:seed": "cd ../.. && tsx prisma/seed.ts",
    "db:reset": "cd ../.. && prisma migrate reset --force",
    "db:studio": "cd ../.. && prisma studio",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@sentry/node": "^10.3.0",
    "@trading-viewer/shared": "workspace:*",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "axios": "^1.6.0",
    "bcrypt": "^6.0.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "express-rate-limit": "^7.1.0",
    "helmet": "^7.1.0",
    "isomorphic-dompurify": "^2.26.0",
    "jsonwebtoken": "^9.0.2",
    "reflect-metadata": "^0.2.2",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.14.0",
    "yahoo-finance2": "^2.13.3",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.8.0",
    "@types/reflect-metadata": "^0.1.0",
    "@types/supertest": "^2.0.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "nodemon": "^3.0.0",
    "prisma": "^5.6.0",
    "supertest": "^6.3.0",
    "tsx": "^4.1.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
