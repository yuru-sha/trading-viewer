# Development Environment Configuration
NODE_ENV=development
PORT=8000

# Database Configuration
# For development: SQLite (file:../../data/dev.db)
# For production: PostgreSQL (postgresql://user:password@localhost:5432/tradingviewer)
DATABASE_URL="file:../../data/dev.db"

# Market Data Configuration
# Set USE_MOCK_DATA=true to use mock data for development/testing
# Uses Yahoo Finance API when USE_MOCK_DATA=false
USE_MOCK_DATA=true
MOCK_REAL_TIME_UPDATES=true

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:8000/api
VITE_WS_URL=ws://localhost:8000/ws

# JWT Configuration
# Generate a secure secret for production: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_RATE_LIMITING=true

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=25000
WS_MAX_CONNECTIONS=100
WS_UPDATE_INTERVAL=5000

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Security Configuration
ENABLE_HELMET=true
ENABLE_SECURITY_HEADERS=true

# Performance Configuration
ENABLE_COMPRESSION=true
ENABLE_CACHING=false

# Graceful Shutdown Configuration
SHUTDOWN_DELAY=5000
SHUTDOWN_TIMEOUT=30000
FORCE_CLOSE_DELAY=5000

# TradingView Lightweight Charts Configuration
CHART_DEFAULT_HEIGHT=600
CHART_ENABLE_VOLUME=true
CHART_ENABLE_CROSSHAIR=true
CHART_ENABLE_TECHNICAL_INDICATORS=true

# Production Environment Variables (uncomment for production)
# NODE_ENV=production
# DATABASE_URL="postgresql://username:password@localhost:5432/tradingviewer_prod"
# JWT_SECRET="your-super-secure-jwt-secret-for-production"
# CORS_ORIGIN="https://yourdomain.com"
# USE_MOCK_DATA=false
# MOCK_REAL_TIME_UPDATES=false
# ENABLE_RATE_LIMITING=true
# RATE_LIMIT_MAX_REQUESTS=100
# LOG_LEVEL=warn
# ENABLE_CACHING=true