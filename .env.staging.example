# Staging Environment Configuration
# Copy this file to .env.staging and update with actual values

# Node Environment
NODE_ENV=staging

# Database Configuration
DATABASE_URL=postgresql://tradingviewer_staging:changeme@postgres:5432/tradingviewer_staging
DB_USER=tradingviewer_staging
DB_PASSWORD=changeme
DB_NAME=tradingviewer_staging
DB_HOST=postgres
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379/1
REDIS_HOST=redis
REDIS_PORT=6379

# Server Configuration
SERVER_PORT=8000
CLIENT_PORT=3000

# Market Data Configuration
# Staging can use either mock or real Yahoo Finance data
USE_MOCK_DATA=false

# Security
JWT_SECRET=staging_jwt_secret_minimum_32_characters
JWT_EXPIRES_IN=1d
REFRESH_TOKEN_SECRET=staging_refresh_token_secret
REFRESH_TOKEN_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://staging.yourdomain.com

# Rate Limiting (more relaxed for testing)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# Monitoring
SENTRY_DSN=your_staging_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_staging_new_relic_key_here

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_CACHE=true
ENABLE_RATE_LIMITING=true
ENABLE_COMPRESSION=true
ENABLE_HELMET=true
ENABLE_DEBUG_MODE=true